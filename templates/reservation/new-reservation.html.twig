{% extends 'base.html.twig' %}
{% block title %}EatYV | New Recipe
{% endblock %}
{% block body %}
	{% include('nav.html.twig') %}<br><br><br><br><br>
	<div class="container">
		<div class="row">
			<div class="col-6 offset-3">
				<div class="card bg-light">
					<div class="card-body">
						<h1 class="text-center">Create reservation</h1>
						{% if app.user %}
								{{ form_start(reservationForm) }}
									{{ form_row(reservationForm.reservationForFirstName) }}
									{{ form_row(reservationForm.reservationForSecondName) }}
									{{ form_row(reservationForm.recipeReservaionId) }}
									{{ form_row(reservationForm.message) }}
									<button class="btn btn-orange btn-block">Create reservation</button>
								{{ form_end(reservationForm) }}
							{% else %}
						{% endif %}
					</div>
				</div>
			</div> 
		</div>
	</div>
	{% include('footer.html.twig') %}
{% endblock %}
