{% extends 'base.html.twig' %}
{% block title %}Register
{% endblock %}
{% block body %}
<div class="background-image">
	<div class="container">
		<div class="row">
			<div class="col-6 offset-3">
				<div class="card bg-light card-register-login">
					<div class="card-body">
						<h1 class="text-center">Register</h1>
						{{ form_start(registrationForm) }}
						{{ form_row(registrationForm.email) }}
						{{ form_row(registrationForm.username) }}
						{{ form_row(registrationForm.plainPassword) }}
						<button class="btn btn-orange btn-block">Register</button>
						{{ form_end(registrationForm) }}
                        <br><p>Already have an account?</p>
                        <a href="{{ path('app_login') }}" class="btn btn-orange btn-block">Sign In</a>
                        <br><center><a href="{{ path('home') }}" class="btn btn-orange">Back</a></center>
					</div>
				</div>
			</div>
		</div>
	</div>
<div>
{% endblock %}
