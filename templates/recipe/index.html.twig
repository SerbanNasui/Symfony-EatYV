{% extends 'base.html.twig' %}


{% block body %}

	<div class="col-md-12 col-lg-12 col-xl-12">
		{% for label, messages in app.flashes %}
			{% for message in messages %}
				<div class="alert alert-{{ label }}" role="alert">
					<span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
					{{ message }}
				</div>
			{% endfor %}
		{% endfor %}
	</div>
	{% for recipe in recipes %}
		<div class="col-6 offset-3">
			<div class="card bg-light card-register-login">
				<div class="card-body">
					<br>
					<div class="card-header">
						<center><img src="{{ asset('uploads/') ~ recipe.image }}" width="300"></center>
					</div>
					<div class="card-body">
						<b>Title:</b>
						{{ recipe.title }}
						<h6>
							<i>Food type:
								{{ recipe.foodCategory }}</i>
						</h6>
					</div>
					<div class="card-header">
						<b>Date start/end:</b>
						{{ recipe.dateStart|date("d/m/Y g:ia") }}
						|
						{{ recipe.dateEnd|date("d/m/Y g:ia") }}
					</div>
					<div class="card-body">
						<b>Price:</b>
						{{ recipe.price }}
						{{ 'EUR'|currency_symbol }}
					</div>
					<div class="card-header">
						<b>Address:</b>
						{{ recipe.address }}
						{{ recipe.city }}
						{{ recipe.country }}
					</div>
					<div class="card-body">
						<center>
							<a href="/show-recipe/{{ recipe.recipeId }}" class="btn btn-orange">Show recipe</a>
						</center>
					</div>
				</div>
			</div><br><br><br>
		</div>
	{% else %}
		<div class="col-6 offset-3">
			<div class="card bg-light card-register-login">
				<div class="card-body">
					<br><div class="card-header">
						<p>No recipes to display</p>
					</div>
				</div>
			</div>
		{% endfor %}
		<div class="container">
			<div class="navigation text-center">
				{{ knp_pagination_render(recipes) }}
			</div>
		</div>
	{% endblock %}
