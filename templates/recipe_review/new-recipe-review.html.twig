{% extends 'base.html.twig' %}
{% block title %}EatYV | New Review
{% endblock %}
{% block body %}
	{% include('nav.html.twig') %}
	<div class="container">
	{% for label, messages in app.flashes %}
			{% for message in messages %}
				<div class="alert alert-{{ label }}" role="alert">
					<span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
					{{ message }}
				</div>
			{% endfor %}
		{% endfor %}<br><br>
		<div class="row">
			<div class="col-6 offset-3">
				<div class="card bg-light">
					<div class="card-body">
						<h1 class="text-center">Create review</h1>
						{% if app.user %}
							{{ form_start(recipeReviewForm) }}
							{{ form_widget(recipeReviewForm) }}
							{{ form_end(recipeReviewForm) }}
							
							
					</div>
				</div>
			</div>
		</div><br><br>
		<center>
		<button button onclick="window.history.go(-1); return false;" class="btn btn-orange">Back to recipe</button>
		</center>
	</div>{% else %}
						{% endif %}
	{% include('footer.html.twig') %}
{% endblock %}
